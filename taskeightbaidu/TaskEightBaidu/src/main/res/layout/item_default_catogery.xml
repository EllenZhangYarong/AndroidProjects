<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe"
    android:orientation="vertical"
    android:padding="10dp">


    <ImageView
        android:id="@+id/ivDefaultPageCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="icon"
        android:src="@drawable/waimai_launcher" />

    <TextView
        android:id="@+id/tvDefaultPageCategoryAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvDefaultPageCategory"
        android:layout_alignParentTop="true"
        android:background="@drawable/text_round_hint"
        android:text="Let&apos;s Home"
        android:textColor="#FFFFFF"
        android:textSize="8sp" />


    <TextView
        android:id="@+id/tvDefaultPageCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivDefaultPageCategory"
        android:layout_centerHorizontal="true"
        android:text="TestForWords" />

</RelativeLayout>